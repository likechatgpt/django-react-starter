# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ENVIRONMENT=production
APP_VERSION=v1.0.0
PORT=8000
RUN_AS_DEV_SERVER=0
DEBUG=0

# Django Superuser (for initial setup only)
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=change-me-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# CORS Settings (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# PostgreSQL Database
POSTGRES_DB=django_react_starter
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong-postgres-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# RabbitMQ
RABBITMQ_HOSTNAME=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=django_react_starter
RABBITMQ_PASSWORD=strong-rabbitmq-password-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=strong-redis-password-here

# Meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_API_KEY=strong-meilisearch-master-key-here
MEILI_MASTER_KEY=strong-meilisearch-master-key-here

# Email Settings (configure with your SMTP provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Sentry (optional, for error tracking)
SENTRY_DSN=
VITE_SENTRY_DSN=

# Security Settings
SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
